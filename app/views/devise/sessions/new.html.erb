<!-- Log In page -->


<div class="card">
  <div class="card-header">
    <h4>Log In</h4>
  </div>
  <div class="card-body">
    
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<!-- Fill in email -->
  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Email" %>
  </div>

<!-- Fill in password -->
  <div class="field form-group">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder:"Password" %>
  </div>

<!-- Remember Me -->
  <% if devise_mapping.rememberable? %>
    <div class="field form-group form-check">
      <%= f.check_box :remember_me, class:"form-check-input"%>
      <%= f.label :remember_me, class: "form-check-label"%>
    </div>
  <% end %>

<!--Log in button-->
  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-secondary" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
  </div>
</div>