<% if user_signed_in? %>

  <% content_for :title, "Projects" %>

  <!--adding to the table class tag to change the style of the table-->
  <!-- got this from getbootstrap.com -->
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Hours Worked</th>
        <th>Finished</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
      <% if project.user == current_user %>
          <tr>
            <td><%= project.name %></td>
            <td><%= project.description %></td>
            <td><%= project.hours_worked %></td>
            <td><%= project.finished %></td>
            <td><%= link_to "Show this project", project %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>


  <%= link_to "New project", new_project_path, class:"btn btn-secondary" %>
<% else %>
  <h1>Hello world!</h1>
  This is my first rails Webpage..
<% end %>