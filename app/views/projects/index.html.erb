<% if user_signed_in? %>

  <% content_for :title, "Projects" %>

 <!-- project dashboard/table -->
  <!-- got this from getbootstrap.com -->
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
       <!-- Table headers -->
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Hours Worked</th>
        <th>Finished</th>
        <th></th>
      </tr>
    </thead>
    <!-- Table body -->
    <tbody>
      <% @projects.each do |project| %>
      <% if project.user == current_user %>
          <tr>
            <!-- Calling each of these from the project partial -->
            <td><%= project.name %></td>
            <td><%= project.description %></td>
            <td><%= project.hours_worked %></td>
            <td><%= project.finished %></td>
            <td><%= link_to "Show this project", project %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>


  <%= link_to "New project", new_project_path, class:"btn btn-secondary" %>
<% end %>